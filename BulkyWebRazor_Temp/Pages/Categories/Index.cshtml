@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4" pd>

        <div class="col-6">
            <h2 class="text-primary"></h2>
            Category List
        </div>

        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">

                <i class="bi bi-plus-circle"></i>
                create new category
            </a>
        </div>

    </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var BookData in Model.CategoriesList)
        {
            <tr>
                
                <td>
                    @BookData.Name
                </td>
                <td>
                    @BookData.DisplayOrder
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@BookData.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i>Edit
                            </a>

                            <a asp-page="/Categories/Delete" asp-route-id="@BookData.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>
</table>

</div>